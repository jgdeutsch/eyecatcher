// This is your Prisma schema file.
// Using PostgreSQL with Neon for production

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model GameResult {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  
  // User/Session Info
  userId    String   @db.VarChar(255) // Anonymous ID from cookie/localStorage
  userName  String   @db.VarChar(255) // User's entered name
  
  // Event Details
  eventType String   @db.VarChar(50)  // "LOAD", "CLICK", "RANK"
  topicName String   @db.VarChar(255)
  imageUrl  String   @db.Text
  value     Int      // LOAD: position, CLICK: 1 (or 0 for unclick), RANK: 1, 2, 3...
  position  Int?     // Position in grid (0-based index)
  
  @@index([userId])
  @@index([userName])
  @@index([topicName])
  @@index([position])
}

